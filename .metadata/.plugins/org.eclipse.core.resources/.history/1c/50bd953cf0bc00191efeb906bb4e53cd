// OOP Object-Oriented Programming 
// Class 

class People{
	// properties - variable name is a noun / expect boolean 
	// methods 
	People(){
		System.out.println("Initialize new people");
		name = "unnamed";
		age = -1;
		isMale = false;
	}
	String name;
	int age;
	boolean isMale;
	
	// getter
	String getName() {
		return name;
	}
	// setter 
	void setName(String name) {
		this.name= name;
	}
	
	static String race() {
		
	}
}

